{
  "name": "repo",
  "devDependencies": {
    "@fsouza/prettierd": "^0.25.2",
    "@repo/config": "workspace:*",
    "eslint": "^8.55.0",
    "eslint_d": "^13.1.2",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.14",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start": "turbo start"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
